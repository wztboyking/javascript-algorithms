{
    "root": true,
    "extends": "airbnb",
    "plugins": ["jest"],
    "env": {
        "jest/globals": true
    },
    "rules": {
        "indent": [0, 4],
        "no-bitwise": "off",
        "no-lonely-if": "off",
        "class-methods-use-this": "off",
        "arrow-body-style": "off",
        "no-loop-func": "off"
    }
}
